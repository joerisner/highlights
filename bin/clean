#!/usr/bin/env bash

remove_artifacts() {
  local ARTIFACTS=(
    ./.ruff_cache
    ./instance
    ./tests/.pytest_cache
    ./tests/coverage
    ./tests/test_results
  )

  for ARTIFACT in "${ARTIFACTS[@]}"; do
    if [[ -d "${ARTIFACT}" ]]; then
      rm -rf "${ARTIFACT}"
      printf "Removed artifact: \033[35;1m%s\033[0m\n" "${ARTIFACT}"
    fi
  done
}

remove_pycache_dirs() {
  local dirs=(./src ./tests)

  for dir in "${dirs[@]}"; do
    if [[ -n "$(find "$dir" -type d -name __pycache__ -print -quit 2>/dev/null)" ]]; then
      find "$dir" -type d -name __pycache__ -exec rm -rf {} +
    fi
  done
  printf "Removed all \033[35;1m__pycache__\033[0m directories\n"
}

remove_artifacts
remove_pycache_dirs
